<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mb-3">
    <div class="row">
        <div class="col-md-8 col-lg-6 col-xl-4 offset-md-2 offset-lg-3 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form
                        action="/login<%= typeof redirect_url !== 'undefined' ? `?redirect_url=${redirect_url}` : '' %>"
                        method="POST" class="validation-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a username.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a password.
                            </div>
                        </div>
                        <button class="btn btn-success">
                            Login
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>