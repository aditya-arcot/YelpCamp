<% if (maxPage > 1) { %>
<nav class="d-flex justify-content-center">
    <ul class="pagination pagination-sm">

        <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
            <a class="page-link" href="/campgrounds?page=1">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        <li class="page-item <%= page == 1 ? 'disabled' : '' %>">
            <a class="page-link" href="/campgrounds?page=<%= page - 1 %>">
                <span aria-hidden="true">&lsaquo;</span>
            </a>
        </li>

        <% if (page > 1) { %>
        <li class="page-item">
            <a class="page-link" href="/campgrounds?page=<%= page - 1 %>"><%= page - 1 %></a>
        </li>
        <% } %>

        <li class="page-item">
            <div class="page-link" style="background-color: lightgray;"><%= page %></div>
        </li>

        <% if (page < maxPage) { %>
        <li class="page-item">
            <a class="page-link" href="/campgrounds?page=<%= page + 1 %>"><%= page + 1 %></a>
        </li>
        <% } %>

        <li class="page-item <%= page == maxPage ? 'disabled' : '' %>">
            <a class="page-link" href="/campgrounds?page=<%= page + 1 %>">
                <span aria-hidden="true">&rsaquo;</span>
            </a>
        </li>

        <li class="page-item <%= page == maxPage ? 'disabled' : '' %>">
            <a class="page-link" href="/campgrounds?page=<%= maxPage %>">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

    </ul>
</nav>
<% } %>