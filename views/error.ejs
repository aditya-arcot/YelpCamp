<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading m-0"><%= err.message %></h4>
            <% if (process.env.NODE_ENV !== 'production') { %>
            <p class="mt-1 mb-0"><%= err.stack %></p>
            <% } %>
        </div>
    </div>
</div>